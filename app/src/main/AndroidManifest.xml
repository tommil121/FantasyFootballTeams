<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tom.fantasyfootballteams" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateTeamActivity"
            android:label="@string/title_activity_create_team"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".add_player"
            android:label="@string/title_activity_add_player"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".TeamResultsActivity"
            android:label="@string/title_activity_team_results"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".player_results" >
        </activity>
        <activity
            android:name=".delete_team"
            android:label="@string/title_activity_delete_team"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".delete_player"
            android:label="@string/title_activity_delete_player"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
